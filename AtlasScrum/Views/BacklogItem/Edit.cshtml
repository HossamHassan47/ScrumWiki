@model AtlasScrum.Models.BacklogItem

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BacklogItem</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.BacklogItemId)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estimate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Estimate)
                @Html.ValidationMessageFor(model => model.Estimate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SprintId, "SprintId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SprintId", String.Empty)
                @Html.ValidationMessageFor(model => model.SprintId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btnSave" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { controller = "BacklogItem" }, new { @class = "btn btn-default btnBack" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
