@model AtlasScrum.Models.SprintTeamMember

@{
    ViewBag.Title = "Add New";
}

<h2>Add New</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sprint Team Member</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SprintId, "Sprint", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SprintId", String.Empty)
                @Html.ValidationMessageFor(model => model.SprintId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeamMemberId, "Team Member", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TeamMemberId", String.Empty)
                @Html.ValidationMessageFor(model => model.TeamMemberId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, "Role", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", String.Empty)
                @Html.ValidationMessageFor(model => model.RoleId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsManOfSprint, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsManOfSprint)
                @Html.ValidationMessageFor(model => model.IsManOfSprint)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default btnSave" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { controller = "SprintTeamMember" }, new { @class = "btn btn-default btnBack" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
